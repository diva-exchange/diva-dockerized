{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false
  },
  "include": [
    "build/*.ts"
  ]
}
